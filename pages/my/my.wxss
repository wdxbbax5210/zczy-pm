/* pages/my/my.wxss */

.my {
  /* padding: 12px; */
  height: 100%;
}

.myHeader {
  height: 3rem;
  background-color: #fff;
  text-align: center;
  padding: 30rpx 24rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  display: flex;
  margin-bottom:30rpx;
}

.userinfo {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 50%;
  overflow: hidden;
}

.userName {
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #4a4a4a;
}

.btn-login {
  border: none !important;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background-color: #fff;
  margin-left: 20rpx;
  color: #38adff;
}

.hide {
  display: none;
}

.register-btn {
  text-align: center;
  width: 100%;
}

.register {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  width: 200rpx;
  font-size: 32rpx;
}

.list-wrap {
  width: 100%;
}

.list-item {
  background: #fff;
  margin-bottom: 30rpx;
}

.list-item:last-child {
  margin: 0;
}

.list-check {
  display: flex;
  align-items: center;
}

.check-wrap {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  border-radius: 100%;
  border: 1px solid #d8d8d8;
}

.check {
  position: absolute;
  top: 0;
  left: -2rpx;
  width: 100%;
  height: 100%;
  line-height: 42rpx;
}

.list-image {
  width: 102rpx;
  height: 102rpx;
  margin-left: 30rpx;
}

.radius {
  border-radius: 100px;
}

.item {
  flex: 1;
  display:block;
}

.list-image {
  width: 102rpx;
  height: 102rpx;
  background: #d8d8d8;
}
